<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AccountsActivity"
    android:background="@color/color_soft_beige">

    <ListView
        android:id="@+id/accountsList"
        android:layout_width="388dp"
        android:layout_height="324dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccounts" />

    <TextView
        android:id="@+id/tvAccounts"
        android:layout_width="376dp"
        android:layout_height="34dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="34dp"
        android:text="My Accounts"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>