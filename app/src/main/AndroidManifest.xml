<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kea_bank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SomeoneElsesActivity"></activity>
        <activity android:name=".activities.DepositMoneyActivity" />
        <activity android:name=".activities.SendMoneyActivity" />
        <activity android:name=".activities.SpecificBillActivity" />
        <activity android:name=".activities.ResetPasswordActivity" />
        <activity android:name=".activities.BillsActivity" />
        <activity android:name=".activities.ApplyAccountActivity" />
        <activity android:name=".activities.SpecificAccountActivity" />
        <activity android:name=".activities.AccountsActivity" />
        <activity android:name=".activities.NewsFeedActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.CreateUserActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.LatLongService" />
    </application>

</manifest>